    </div>
    <div class="form-group">
      <label for="surname">Name:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter Name" value="<%= user.surname %>" name="surname" required>
    </div>
    <div class="form-group">
      <label for="birthdate">Name:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter Name" value="<%= user.birthdate %>" name="birthdate" required>
    </div>
    <div class="form-group">
      <label for="idnumber">Name:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter Name" value="<%= user.idnumber %>" name="idnumber" required>
    </div>
    <div class="form-group">
      <label for="income">Email:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter email" value="<%= user.income %>" name="income" required>
    </div>
    <div class="form-group">
      <label for="phonenumber">Phone No:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter Phone No" value="<%= user.phonenumber %>" name="phonenumber" required>
    </div>
    <div class="form-group">
      <label for="mail">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter email" value="<%= user.mail %>" name="mail" required>
    </div>

    <div class="form-group">
      <label for="password">Email:</label>
      <input type="text" class="form-control" id="password" placeholder="Enter email" value="<%= user.password %>" name="password" required>
    </div>
    <div class="form-group">
      <label for="gender">Phone No:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter Phone No" value="<%= user.gender %>" name="gender" required>
    </div>
    <div class="form-group">
      <label for="familycode">Email:</label>
      <input type="text" class="form-control" id="email" placeholder="Enter email" value="<%= user.familycode %>" name="familycode" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
 
</body>
</html>